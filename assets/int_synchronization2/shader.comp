#version 450

layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;
layout(set = 0, binding = 1) readonly buffer Source {
	uint d[];
};
layout(r32ui, set = 0, binding = 3) uniform uimage2D outImage;

void main()
{
	const uint color = d[gl_WorkGroupID.y * gl_NumWorkGroups.x + gl_WorkGroupID.x];
	imageStore(outImage, ivec2(gl_WorkGroupID.xy), uvec4(color));
}

